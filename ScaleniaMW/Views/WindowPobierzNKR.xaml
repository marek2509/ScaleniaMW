        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScaleniaMW"
        mc:Ignorable="d"
        Title="NKR" Height="200" Width="300" x:Name="windowPobierzNKR">
    <StackPanel Margin="10">
        <Label HorizontalAlignment="Center">Wpisz nr nkr:</Label>
        <TextBox HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="80" x:Name="textBoxNkrDoWWE" Margin="0,0,0,10" KeyDown="TextBoxNkrDoWWE_KeyDown"></TextBox>
        <Button Click="Button_ClickPotwierdzWpisanyNKR">Zatwierdź</Button>
    </StackPanel>
</Window>
